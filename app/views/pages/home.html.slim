        = column size: 16
          = grid 'internally celled'
            = row 'two column'
              = column class: 'center aligned'
                = h3 text: 'EMAIL'
                = h4 class: 'light', text: 'SUPPORT@LEONID.IO', url: 'mailto:support@leonid.io', tag: :div
              = column class: 'center aligned'
                = h3 text: 'SOCIAL'
                = icon 'linkedin circular inverted'
                = icon 'github circular inverted'
                = icon 'twitter circular inverted'
                = icon 'instagram circular inverted'
